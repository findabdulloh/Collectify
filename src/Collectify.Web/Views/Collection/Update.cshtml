@model Collectify.Service.DTOs.Collections.CollectionUpdateDto

@{
    ViewData["Title"] = "Update Collection";
}

@if (TempData.ContainsKey("SuccessMessage"))
{
                <div class="alert alert-success">
        @TempData["SuccessMessage"]
                </div>
}

@if (TempData.ContainsKey("ErrorMessage"))
{
                <div class="alert alert-danger">
        @TempData["ErrorMessage"]
                </div>
}

<h2>Update Collection</h2>

<form asp-controller="Collection" asp-action="PostUpdate" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label for="Name">Name:</label>
        <input type="text" asp-for="Name" required />
    </div>
    <div>
        <label for="Description">Description:</label>
        <textarea asp-for="Description" rows="4" required></textarea>
    </div>
    <div>
        <label for="Category">Category:</label>
        <select asp-for="Category" asp-items="Html.GetEnumSelectList<Collectify.Domain.Enums.Category>()" required>
            <option value="">Select Category</option>
        </select>
    </div>

    <button type="submit">Update</button>
    <form asp-controller="Collection" asp-action="MyCollections" method="get">
        <button type="submit">Back</button>
    </form>
</form>
